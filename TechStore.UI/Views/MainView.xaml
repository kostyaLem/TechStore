                    <MenuItem
                        Command="{Binding ChangeThemeCommand}"
                        CommandParameter="{x:Static enumStyle:ThemeStyleMode.Light}"
                        Header="Светлая" />
                    <MenuItem
                        Command="{Binding ChangeThemeCommand}"
                        CommandParameter="{x:Static enumStyle:ThemeStyleMode.Dark}"
                        Header="Тёмная">
                        <MenuItem.Icon>
                            <Border Background="Black" CornerRadius="7" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
    </hc:GlowWindow.NonClientAreaContent>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border
            Grid.RowSpan="2"
            Panel.ZIndex="10"
            d:Visibility="Hidden"
            Background="#33000000"
            CornerRadius="10"
            Visibility="{Binding IsUploading, Converter={StaticResource Boolean2VisibilityConverter}}">
            <hc:LoadingCircle Style="{StaticResource LoadingCircleLight}" />
        </Border>

        <StackPanel
            HorizontalAlignment="Center"
            DataContext="{Binding Statistic}"
            Orientation="Horizontal">
            <StackPanel.Resources>
                <Style BasedOn="{StaticResource BorderRegion}" TargetType="Border">
                    <Setter Property="Effect" Value="{StaticResource EffectShadow1}" />
                    <Setter Property="Width" Value="80" />
                    <Setter Property="Height" Value="80" />
                    <Setter Property="CornerRadius" Value="20" />
                    <Setter Property="Padding" Value="0,10,0,10" />
                    <Setter Property="Margin" Value="10,0" />
                    <Setter Property="BorderThickness" Value="4,0,0,4" />
                </Style>

                <Style x:Key="CounterTextBlockStyle" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="30" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>

                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Bottom" />
                </Style>
            </StackPanel.Resources>

            <Border BorderBrush="{StaticResource InfoBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Заказы" />
                    <TextBlock
                        d:Text="34"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding OrdersCount}" />
                </DockPanel>
            </Border>
            <Border BorderBrush="{StaticResource WarningBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Товары" />
                    <TextBlock
                        d:Text="245"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding ProductsCount}" />
                </DockPanel>
            </Border>
            <Border BorderBrush="{StaticResource DangerBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Клиенты" />
                    <TextBlock
                        d:Text="76"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding CustomersCount}" />
                </DockPanel>
            </Border>
            <Border BorderBrush="{StaticResource AccentBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Категории" />
                    <TextBlock
                        d:Text="32"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding CategoriesCount}" />
                </DockPanel>
            </Border>
            <Border BorderBrush="{StaticResource PrimaryBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Промокоды" />
                    <TextBlock
                        d:Text="21"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding PromosCount}" />
                </DockPanel>
            </Border>
            <Border BorderBrush="{StaticResource SuccessBrush}">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Bottom" Text="Сотрудники" />
                    <TextBlock
                        d:Text="9"
                        Style="{StaticResource CounterTextBlockStyle}"
                        Text="{Binding EmployeesCount}" />
                </DockPanel>
            </Border>
        </StackPanel>

    </Grid>
</hc:GlowWindow>
