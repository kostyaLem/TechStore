<hc:GlowWindow
    x:Class="TechStore.UI.Views.Administration.AuthView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="400"
    Height="250"
    d:Title="TechStore | Авторизация"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="30,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Width="190"
                VerticalAlignment="Center">
                <Label
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Логин"
                    FontSize="14"
                    FontWeight="DemiBold" />
                <hc:TextBox hc:InfoElement.ShowClearButton="True" FontSize="12" />
                <Label
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Пароль"
                    FontSize="14"
                    FontWeight="DemiBold" />
                <hc:PasswordBox
                    FontSize="12"
                    ShowClearButton="True"
                    ShowEyeButton="True" />
            </StackPanel>

            <Button
                Grid.Row="2"
                Width="110"
                HorizontalAlignment="Right"
                hc:BorderElement.CornerRadius="5"
                Content="Войти"
                FontWeight="DemiBold"
                Style="{StaticResource ButtonInfo}">
                <Button.BorderBrush>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FF00BCD4" />
                        <GradientStop Offset="1" Color="#FF02466A" />
                    </LinearGradientBrush>
                </Button.BorderBrush>
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#FF00BCD4" />
                        <GradientStop Offset="1" Color="#FF02466A" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>

        <Image
            Grid.Column="1"
            Width="100"
            HorizontalAlignment="Right"
            Source="{StaticResource LogoImage}"
            Stretch="UniformToFill" />

    </Grid>
</hc:GlowWindow>
